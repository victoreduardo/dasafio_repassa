<% content_for :title, "Listagem de #{pluralize_model(TbEmpregado)}" %>

<div class="card shadow mb-4">
  <%= component(:panel, :panel_header, title: 'Filtrar') %>
  <div class="card-body">
    <%= search_form_for @q, url: administracao_tb_empregados_path, html: { role: "form" } do |f| %>
      <div class="row">
        <div class="col-md-4">
          <%= f.label :nome_cont, "#{translate_attr(TbEmpregado, :nome)}" %>
          <%= f.search_field :nome_cont, class: "form-control",
                             placeholder: "Digite o #{translate_attr(TbEmpregado, :nome)}" %>
        </div>

        <div class="col-md-4">
          <%= f.label :nmr_cpf_cont, "#{translate_attr(TbEmpregado, :nmr_cpf)}" %>
          <%= f.search_field :nmr_cpf_cont, class: "form-control",
                             placeholder: "Digite o #{translate_attr(TbEmpregado, :nmr_cpf)}" %>
        </div>

        <div class="col-md-4">
          <%= f.label :end_email_cont, "#{translate_attr(TbEmpregado, :end_email)}" %>
          <%= f.search_field :end_email_cont, class: "form-control",
                             placeholder: "Digite o #{translate_attr(TbEmpregado, :end_email)}" %>
        </div>

        <div class="col-md-12 margin-top-10">
          <div class="pull-right">
            <%= component "buttons", "pesquisar" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>


<div class="card shadow mb-4">
  <%= component(:panel, :panel_header_link, title: pluralize_model(TbEmpregado), links: [{ label: "Novo", link: new_administracao_tb_empregado_path, icone: "fa-plus" }]) %>
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-hover table-responsive table-striped table-bordered data_table" style="margin-top: 6px;">
        <thead>
        <tr>
          <th><%= translate_attr(TbEmpregado, :nome) %></th>

          <th><%= translate_attr(TbEmpregado, :nmr_cpf) %></th>

          <th><%= translate_attr(TbEmpregado, :end_email) %></th>

          <th><%= translate_attr(TbEmpregado, :dta_nascimento) %></th>

          <th><%= translate_attr(TbEmpregado, :sexo) %></th>

          <th><%= translate_attr(TbEmpregado, :dta_admissao) %></th>

          <th><%= translate_attr(TbEmpregado, :tb_cargo_id) %></th>
          <th style="width: 1px; text-align: center;">Ações</th>
        </tr>
        </thead>
        <tbody>
        <%= render 'lista_grid' %>
        </tbody>
      </table>
    </div>
  </div>
</div>
