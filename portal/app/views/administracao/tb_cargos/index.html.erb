<% content_for :title, "Listagem de #{pluralize_model(TbCargo)}" %>

<div class="card shadow mb-4">
  <%= component(:panel, :panel_header, title: 'Filtrar') %>
  <div class="card-body">
    <%= search_form_for @q, url: administracao_tb_cargos_path, html: { role: "form" } do |f| %>
      <div class="row">
        <div class="col-md-12">
          <%= f.label :nome_cont, "#{translate_attr(TbCargo, :nome)}" %>
          <%= f.search_field :nome_cont, class: "form-control",
                             placeholder: "Digite o #{translate_attr(TbCargo, :nome)}" %>
        </div>

        <div class="col-md-12 margin-top-10">
          <div class="pull-right">
            <%= component "buttons", "pesquisar" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<div class="card shadow mb-4">
  <%= component(:panel, :panel_header_link, title: pluralize_model(TbCargo), links: [{ label: "Novo", link: new_administracao_tb_cargo_path, icone: "fa-plus" }]) %>
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-hover table-responsive table-striped table-bordered data_table" style="margin-top: 6px;display: inline-table;">
        <thead>
        <tr>
          <th><%= translate_attr(TbCargo, :nome) %></th>

          <th><%= translate_attr(TbCargo, :salario) %></th>
          <th style="width: 1px; text-align: center;">Ações</th>
        </tr>
        </thead>
        <tbody>
        <%= render 'lista_grid' %>
        </tbody>
      </table>
    </div>
  </div>
</div>
