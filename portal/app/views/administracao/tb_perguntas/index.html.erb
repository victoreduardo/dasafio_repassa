<% content_for :title, "Listagem de #{pluralize_model(TbPergunta)}" %>

<div class="card shadow mb-4">
  <%= component(:panel, :panel_header, title: 'Filtrar') %>
  <div class="card-body">
    <%= search_form_for @q, url: administracao_tb_perguntas_path, html: { role: "form" } do |f| %>
      <div class="row">

        <div class="col-md-6">
          <%= f.label :nme_pergunta_cont, "#{translate_attr(TbPergunta, :nme_pergunta)}" %>
          <%= f.search_field :nme_pergunta_cont, class: "form-control",
                             placeholder: "Digite o #{translate_attr(TbPergunta, :nme_pergunta)}" %>
        </div>

        <div class="col-md-6">
          <%= f.label :peso_cont, "#{translate_attr(TbPergunta, :peso)}" %>
          <%= f.search_field :peso_cont, class: "form-control",
                             placeholder: "Digite o #{translate_attr(TbPergunta, :peso)}" %>
        </div>

        <div class="col-md-12 margin-top-10">
          <div class="pull-right">
            <%= component "buttons", "pesquisar" %>
          </div>
        </div>
      </div>
    <% end %>

  </div>
</div>

<div class="card shadow mb-4">
  <%= component(:panel, :panel_header_link, title: pluralize_model(TbPergunta), links: [{ label: "Novo", link: new_administracao_tb_pergunta_path, icone: "fa-plus" }]) %>
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-hover table-responsive table-striped table-bordered data_table" style="margin-top: 6px;">
        <thead>
        <tr>

          <th><%= translate_attr(TbPergunta, :nme_pergunta) %></th>

          <th><%= translate_attr(TbPergunta, :descricao) %></th>

          <th><%= translate_attr(TbPergunta, :peso) %></th>
          <th style="width: 1px; text-align: center;">Ações</th>
        </tr>
        </thead>
        <tbody>
        <%= render 'lista_grid' %>
        </tbody>
      </table>
    </div>
  </div>
</div>
