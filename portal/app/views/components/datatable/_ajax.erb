<% data_columns = columns.map {|h| {data: h}}.to_json if columns.present? %>

<div class="table-responsive">
  <table class="table table-hover table-responsive table-striped table-bordered datatable-ajax" width="100%"
         data-source="<%= source %>"
         data-fields="<%= data_columns %>">
    <thead>
    <tr>
      <%= yield %>
    </tr>
    </thead>
  </table>
</div>