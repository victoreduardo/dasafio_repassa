<div class="card-header py-3">
  <h6 class="m-0 font-weight-bold text-primary" style="float: left;">
    <%= options[:title] %>
  </h6>
  <div class="pull-right">
    <% if options[:links].present? %>
      <% options[:links].each do |item| %>
        <a class="btn btn-info btn-sm"
           <%= "href=#{item[:link]}" if item[:link] %>
           <%= "onclick='#{item[:onclick]}'" if item[:onclick] %>
           <%= "data-remote='#{item[:remote]}'" if item[:remote] %>
           title="<%= item[:label].nil? ? "Novo" : item[:label] %>">
          <%= "<span class='fa #{item[:icone]}' ></span>".html_safe if item[:icone] %> <%= (item[:label].nil? ? "Novo" : item[:label]) %>
        </a>
      <% end %>
    <% end %>
  </div>
</div>
