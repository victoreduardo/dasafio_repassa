<%# Rails flash messages styled for Bootstrap 3.0 %>
<% flash.each do |name, msg| %>
    <% if msg.is_a?(String) %>
        <div class="alert alert-<%= check_alert name %>">
          <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
          <span class="fa <%= check_alert_icon name %>"></span>&nbsp;
          <%= content_tag :div, msg.html_safe, :id => "flash_#{name}", :style => "display: inline;" %>
        </div>
    <% end %>
<% end %>

