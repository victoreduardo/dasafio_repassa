<div class="row">
  <div class="col-md-12">
    <div class="table-responsive">
      <table class="table table-hover table-striped table-bordered" style="margin-top: 6px;">
        <thead>
        <tr>
          <th><%= sort_link(@q, :nome) %></th>
          <th><%= sort_link(@q, :subdominio) %></th>
          <th class="text-center"><%= TbCurso.human_attribute_name(:qtd_alunos_ativos) %></th>
        </tr>
        </thead>
        <tbody>
        <% @tb_escolas.each do |escola| %>
          <tr>
            <td><%= h escola.nome %> </td>
            <td><%= h escola.decorate.subdominio_completo %> </td>
            <td class="text-center"><%= h escola.decorate.qtd_alunos_ativos %> </td>
          </tr>
        <% end %>
        </tbody>
        <tfoot>
        <tr>
          <th colspan="2">
            <div class="pull-right">Total:</div>
          </th>
          <th class="text-center"><%= @tb_escolas.collect { |x| x.tb_cursos.sum(&:qtd_alunos_ativos) }.sum %> aluno(s)</th>
        </tr>
        </tfoot>
      </table>
    </div>
  </div>
</div>
